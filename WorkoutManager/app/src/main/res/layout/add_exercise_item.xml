<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exercise_spinner"
        >
    </Spinner>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_sets"
        android:layout_below="@+id/exercise_spinner"
        android:layout_alignParentStart="true"
        android:hint="Enter sets"
        android:inputType="number"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exercise_spinner"
        android:layout_toEndOf="@+id/edit_sets"
        android:id="@+id/edit_reps"
        android:hint="Enter reps"
        android:inputType="number"
        />

    <Button
        android:id="@+id/delete_exercise"
        android:layout_width="@dimen/delete_button_size"
        android:layout_height="@dimen/delete_button_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/delete_button"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>
